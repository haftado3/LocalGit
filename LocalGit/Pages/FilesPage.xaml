                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>-->
                <!--this will make itemscontrol view to fit in horizontal scale and wrap to next line at overflow-->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"  />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
